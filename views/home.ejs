<%- include("partials/header") %>

<h1>Home</h1>
<p><%= content %></p>
<% blog.forEach(function(obj){ %>
    <h1><%= obj.title %></h1>
  <%if(obj.body.length>100){%>
  <%const  body = obj.body.substring(0,100) + " ...";%>
  <p><%= body %> <a href="/posts/<%= obj.title %>" target="_blank">Read More</a></p>
  <%} else{%>
    <p><%= obj.body %> </p>
  <%}%>
     
<% });  %>

<%- include("partials/footer") %>

